    </style>
  </head>
  <body>
    <div id="app">
      <div class="header">
        <h1>ğŸ‘” è¡£æœåº“å­˜ç®¡ç†ç³»ç»Ÿ</h1>
        <p>è½»é‡çº§åº“å­˜ç®¡ç†ä¸ä½¿ç”¨è®°å½•è¿½è¸ª</p>
      </div>

      <div class="container">
        <!-- Tab å¯¼èˆª -->
        <div class="tabs">
          <div
            class="tab"
            :class="{active: activeTab === 'dashboard'}"
            @click="activeTab = 'dashboard'"
          >
            ğŸ“Š å‰©ä½™æ€»è¡¨é¢„è§ˆ
          </div>
          <div
            class="tab"
            :class="{active: activeTab === 'usage'}"
            @click="activeTab = 'usage'"
          >
            ğŸ“ ä½¿ç”¨è®°å½•è¯¦ç»†
          </div>
          <div
            class="tab"
            :class="{active: activeTab === 'stock'}"
            @click="activeTab = 'stock'"
          >
            ğŸ“¦ åº“å­˜æ€»è¡¨é¢„è§ˆ
          </div>
        </div>

        <!-- Tab å†…å®¹ -->
        <div class="tab-content">
          <!-- Alert æ¶ˆæ¯ -->
          <div
            v-if="alert.show"
            :class="['alert', alert.type === 'success' ? 'alert-success' : 'alert-error']"
          >
            {{ alert.message }}
          </div>

          <!-- Tab 1: å‰©ä½™æ€»è¡¨é¢„è§ˆ -->
          <div v-show="activeTab === 'dashboard'">
            <h2 class="section-title">å‰©ä½™æ€»è¡¨é¢„è§ˆï¼ˆæ ¸å¿ƒåŠŸèƒ½ï¼‰</h2>
            <div v-if="loading" class="loading">
              <div class="spinner"></div>
              <p>åŠ è½½ä¸­...</p>
            </div>
            <table v-else>
              <thead>
                <tr>
                  <th>æ¬¾å¼/å°ºå¯¸</th>
                  <th v-for="size in dashboardData.sizes" :key="size">
                    {{ size }}
                  </th>
                </tr>
              </thead>
              <tbody>
          <!-- Tab 2: ä½¿ç”¨è®°å½•è¯¦ç»† -->
          <div v-show="activeTab === 'usage'">
            <h2 class="section-title">æ·»åŠ ä½¿ç”¨è®°å½•</h2>
            <div class="form-group">
              <div class="form-item">
                <label>ä½¿ç”¨äººå§“å</label>
                <input
                  type="text"
                  v-model="usageForm.user"
                  placeholder="è¯·è¾“å…¥å§“å"
                />
              </div>
              <div class="form-item">
                <label>æ¬¾å¼</label>
                <select v-model="usageForm.style">
                  <option value="">è¯·é€‰æ‹©æ¬¾å¼</option>
                  <option
                    v-for="style in stylesList"
                    :key="style"
                    :value="style"
                  >
                    {{ style }}
                  </option>
                </select>
              </div>
              <div class="form-item">
                <label>å°ºå¯¸</label>
                <select v-model="usageForm.size">
                  <option value="">è¯·é€‰æ‹©å°ºå¯¸</option>
                  <option v-for="size in sizesList" :key="size" :value="size">
                    {{ size }}
                  </option>
                </select>
              </div>
              <div class="form-item">
                <label>æ•°é‡</label>
                <input
                  type="number"
                  v-model="usageForm.qty"
                  min="1"
                  value="1"
                />
              </div>
              <div class="form-item">
                <label>&nbsp;</label>
                <button @click="addUsageLog">â• æ·»åŠ è®°å½•</button>
              </div>
            </div>

            <h2 class="section-title">ä½¿ç”¨æµæ°´åˆ—è¡¨</h2>
            <div class="log-list">
              <div v-if="usageLogs.length === 0" class="loading">
                <p>æš‚æ— ä½¿ç”¨è®°å½•</p>
              </div>
              <div v-else>
                <table>
                  <thead>
                    <tr>
                      <th>æ—¶é—´</th>
                      <th>ä½¿ç”¨äºº</th>
                      <th>æ¬¾å¼</th>
                      <th>å°ºå¯¸</th>
                      <th>æ•°é‡</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr v-for="log in usageLogs" :key="log.id">
