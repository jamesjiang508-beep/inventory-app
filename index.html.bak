                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <!-- Tab 3: åº“å­˜æ€»è¡¨é¢„è§ˆ -->
          <div v-show="activeTab === 'stock'">
            <h2 class="section-title">åˆå§‹åº“å­˜è®¾ç½®</h2>
            <div class="edit-mode-toggle">
              <button @click="editMode = !editMode" class="btn-secondary">
                {{ editMode ? 'ğŸ”’ é”å®šç¼–è¾‘' : 'âœï¸ è¿›å…¥ç¼–è¾‘' }}
              </button>
              <button
                v-if="editMode"
                @click="saveAllStock"
                style="margin-left: 10px"
              >
                ğŸ’¾ ä¿å­˜æ‰€æœ‰ä¿®æ”¹
              </button>
            </div>
            <table>
              <thead>
                <tr>
                  <th>æ¬¾å¼/å°ºå¯¸</th>
                  <th v-for="size in stockData.sizes" :key="size">
                    {{ size }}
                  </th>
                </tr>
              </thead>
              <tbody>
                <tr v-for="style in stockData.styles" :key="style">
                  <td><strong>{{ style }}</strong></td>
